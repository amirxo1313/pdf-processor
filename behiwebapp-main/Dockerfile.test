FROM mcr.microsoft.com/playwright:v1.40.0-jammy

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy test files
COPY playwright.config.js ./
COPY tests ./tests

# Create directory for test results
RUN mkdir -p test-results

# Set environment variables
ENV CI=true

# Run tests
CMD ["npx", "playwright", "test"]

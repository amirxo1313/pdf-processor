{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GapGPT System Agent",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gapgpt-system-agent/vscode_agent.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/gapgpt-system-agent",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/gapgpt-system-agent"
            }
        },
        {
            "name": "GapGPT Backend API",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/gapgpt-system-agent/backend/main.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/gapgpt-system-agent",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/gapgpt-system-agent"
            }
        }
    ]
}
